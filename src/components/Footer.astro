---
import GitHubIcon from './icons/GitHubIcon.astro';
import LinkedInIcon from './icons/LinkedInIcon.astro';

const currentYear = new Date().getFullYear();
---

<footer class="bg-slate-900 dark:bg-dark-bg text-slate-300 dark:text-dark-text py-8 border-t border-transparent dark:border-dark-border">
  <div class="container mx-auto px-6">
    <div class="flex flex-col md:flex-row justify-between items-center gap-4">
      <p class="text-sm">
        &copy; {currentYear} All rights reserved.
      </p>
      
      <div class="flex gap-6">
        <a 
          href="https://github.com/alinangnaiba" 
          target="_blank" 
          rel="noopener noreferrer"
          class="hover:text-primary-400 transition-colors duration-200"
          aria-label="GitHub Profile"
        >
          <GitHubIcon class="w-6 h-6" />
        </a>
        
        <a 
          href="https://linkedin.com/in/alynamarillo" 
          target="_blank" 
          rel="noopener noreferrer"
          class="hover:text-primary-400 transition-colors duration-200"
          aria-label="LinkedIn Profile"
        >
          <LinkedInIcon class="w-6 h-6" />
        </a>
      </div>
    </div>
  </div>
</footer>
