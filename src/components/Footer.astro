---
import GitHubIcon from "./icons/GitHubIcon.astro";
import LinkedInIcon from "./icons/LinkedInIcon.astro";

const currentYear = new Date().getFullYear();
---

<footer
  class="border-t border-transparent bg-slate-900 py-8 text-slate-300 dark:border-dark-border dark:bg-dark-bg dark:text-dark-text"
>
  <div class="container mx-auto px-6">
    <div class="flex flex-col items-center justify-between gap-4 md:flex-row">
      <p class="text-sm">
        &copy; {currentYear} All rights reserved.
      </p>

      <div class="flex gap-6">
        <a
          href="https://github.com/alinangnaiba"
          target="_blank"
          rel="noopener noreferrer"
          class="transition-colors duration-200 hover:text-primary-400"
          aria-label="GitHub Profile"
        >
          <GitHubIcon class="h-6 w-6" />
        </a>

        <a
          href="https://linkedin.com/in/alynamarillo"
          target="_blank"
          rel="noopener noreferrer"
          class="transition-colors duration-200 hover:text-primary-400"
          aria-label="LinkedIn Profile"
        >
          <LinkedInIcon class="h-6 w-6" />
        </a>
      </div>
    </div>
  </div>
</footer>
