---
import { featuredProjects } from "../data/projects";
---

<section id="featured-projects" class="section bg-white dark:bg-dark-sidebar">
  <div
    class="blob left-0 top-0 bg-gradient-to-br from-primary-100/30 to-transparent dark:from-primary-900/10"
  >
  </div>

  <div class="section-container">
    <div class="mb-12 text-center">
      <h2
        class="mb-4 bg-gradient-to-r from-slate-900 via-primary-800 to-slate-900 bg-clip-text text-4xl font-bold text-transparent dark:from-slate-100 dark:via-primary-400 dark:to-slate-100"
      >
        Featured Projects
      </h2>
      <p class="mx-auto max-w-2xl text-slate-600 dark:text-slate-400">
        Live applications and tools
      </p>
    </div>

    <div class="mx-auto grid max-w-5xl gap-8 md:grid-cols-2">
      {
        featuredProjects.map((project) => (
          <a
            href={project.url}
            target="_blank"
            rel="noopener noreferrer"
            class="group block h-full"
          >
            <div class="card-featured card-featured-hover relative flex h-full flex-col overflow-hidden p-8">
              <div class="absolute inset-0 rounded-2xl bg-gradient-to-br from-primary-500/0 to-primary-600/0 transition-all duration-300 group-hover:from-primary-500/5 group-hover:to-primary-600/5" />

              <div class="relative z-10 flex h-full flex-col">
                <div class="mb-4 flex items-start justify-between">
                  <div class="text-primary-600 transition-transform duration-300 group-hover:scale-110 dark:text-primary-400">
                    <i class={`ph-${project.iconWeight} ph-${project.icon} text-5xl`} />
                  </div>
                  <span class="badge badge-status-live flex items-center gap-1 text-xs">
                    <span class="h-2 w-2 animate-pulse rounded-full bg-green-500" />
                    {project.status}
                  </span>
                </div>

                <h3 class="mb-2 text-2xl font-bold text-slate-900 transition-colors group-hover:text-primary-700 dark:text-slate-100 dark:group-hover:text-primary-400">
                  {project.name}
                  <i class="ph ph-arrow-square-out ml-2 inline-block text-xl transition-transform group-hover:-translate-y-1 group-hover:translate-x-1" />
                </h3>

                <div class="mb-3">
                  <span class="rounded bg-primary-100 px-2 py-1 text-xs font-semibold text-primary-600 dark:bg-primary-900/30 dark:text-primary-400">
                    {project.type}
                  </span>
                </div>

                <p class="mb-4 flex-grow leading-relaxed text-slate-700 dark:text-dark-text">
                  {project.description}
                </p>

                <div class="mb-4 flex flex-wrap gap-2">
                  {project.technologies.map((tech) => (
                    <span class="badge badge-tech">{tech}</span>
                  ))}
                </div>

                <div class="mt-auto flex items-center gap-2 border-t border-slate-200 pt-4 text-sm text-slate-600 dark:border-dark-border dark:text-slate-400">
                  <i class="ph-duotone ph-eye text-base" />
                  {project.metrics}
                </div>
              </div>
            </div>
          </a>
        ))
      }
    </div>
  </div>
</section>
