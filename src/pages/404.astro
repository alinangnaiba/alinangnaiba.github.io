---
import Layout from "../layouts/Layout.astro";
import SadCat from "../components/icons/SadCat.astro";
---

<Layout
  title="404 - Page Not Found | Alyn Amarillo"
  description="The page you're looking for doesn't exist. Return to my portfolio homepage."
>
  <div class="min-h-screen flex items-center justify-center px-4 py-20">
    <div class="text-center max-w-2xl mx-auto">
      <!-- Sad Cat Icon -->
      <div class="mb-8 flex justify-center animate-fade-in">
        <SadCat class="sad-cat" />
      </div>

      <!-- Animated 404 with gradient background -->
      <div class="relative mb-8">
        <!-- Background gradient orbs -->
        <div class="absolute inset-0 flex items-center justify-center opacity-20">
          <div class="w-64 h-64 bg-gradient-to-br from-primary-400 to-primary-600 rounded-full blur-3xl animate-pulse"></div>
        </div>
        
        <!-- 404 text -->
        <h1
          class="relative text-9xl font-bold bg-gradient-to-br from-primary-400 to-primary-600 bg-clip-text text-transparent animate-fade-in"
        >
          404
        </h1>
      </div>

      <!-- Error message -->
      <div class="space-y-4 mb-12 animate-slide-up" style="animation-delay: 0.2s;">
        <h2 class="text-3xl font-bold text-gray-900 dark:text-white">
          Oops! Page Not Found
        </h2>
        <p class="text-lg text-gray-600 dark:text-gray-400">
          Looks like this page wandered off. Let's get you back on track!
        </p>
      </div>

      <!-- Navigation buttons -->
      <div
        class="flex flex-col sm:flex-row gap-4 justify-center items-center animate-slide-up"
        style="animation-delay: 0.3s;"
      >
        <a
          href="/"
          class="group px-8 py-3 bg-gradient-to-r from-primary-500 to-primary-600 text-white rounded-lg font-medium hover:from-primary-600 hover:to-primary-700 transition-all duration-300 hover:scale-105 hover:shadow-xl hover:shadow-primary-500/25 flex items-center gap-2"
        >
          <i class="ph ph-house-line text-xl group-hover:animate-bounce"></i>
          <span>Go Home</span>
        </a>
        
        <a
          href="/#projects"
          class="group px-8 py-3 bg-gray-100 dark:bg-dark-sidebar text-gray-900 dark:text-white rounded-lg font-medium hover:bg-gray-200 dark:hover:bg-dark-input transition-all duration-300 hover:scale-105 flex items-center gap-2"
        >
          <i class="ph ph-code text-xl group-hover:animate-bounce"></i>
          <span>View Projects</span>
        </a>
      </div>

      <!-- Quick links -->
      <div
        class="mt-16 pt-8 border-t border-gray-200 dark:border-gray-800 animate-slide-up"
        style="animation-delay: 0.4s;"
      >
        <p class="text-sm text-gray-500 dark:text-gray-500 mb-4">Or explore:</p>
        <div class="flex flex-wrap gap-4 justify-center">
          <a
            href="/#about"
            class="text-primary-600 dark:text-primary-400 hover:underline font-medium text-sm"
          >
            About
          </a>
          <span class="text-gray-300 dark:text-gray-700">•</span>
          <a
            href="/#experience"
            class="text-primary-600 dark:text-primary-400 hover:underline font-medium text-sm"
          >
            Experience
          </a>
          <span class="text-gray-300 dark:text-gray-700">•</span>
          <a
            href="/#skills"
            class="text-primary-600 dark:text-primary-400 hover:underline font-medium text-sm"
          >
            Skills
          </a>
          <span class="text-gray-300 dark:text-gray-700">•</span>
          <a
            href="/#featured"
            class="text-primary-600 dark:text-primary-400 hover:underline font-medium text-sm"
          >
            Featured Projects
          </a>
          <span class="text-gray-300 dark:text-gray-700">•</span>
          <a
            href="/#contact"
            class="text-primary-600 dark:text-primary-400 hover:underline font-medium text-sm"
          >
            Contact
          </a>
        </div>
      </div>
    </div>
  </div>

  <style>
    .sad-cat path {
      fill: currentColor;
    }
    
    .sad-cat {
      color: #0088ff;
    }
    
    @media (prefers-color-scheme: dark) {
      .sad-cat {
        color: #33a0ff;
      }
    }
    
    :global(.dark) .sad-cat {
      color: #33a0ff;
    }

    @keyframes fade-in {
      from {
        opacity: 0;
        transform: scale(0.9);
      }
      to {
        opacity: 1;
        transform: scale(1);
      }
    }

    @keyframes slide-up {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .animate-fade-in {
      animation: fade-in 0.6s ease-out forwards;
    }

    .animate-slide-up {
      opacity: 0;
      animation: slide-up 0.6s ease-out forwards;
    }
  </style>
</Layout>
