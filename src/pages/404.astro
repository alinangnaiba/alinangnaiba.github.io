---
import Layout from "../layouts/Layout.astro";
import SadCat from "../components/icons/SadCat.astro";
---

<Layout
  title="404 - Page Not Found | Alyn Amarillo"
  description="The page you're looking for doesn't exist. Return to my portfolio homepage."
>
  <div class="flex min-h-screen items-center justify-center px-4 py-20">
    <div class="mx-auto max-w-2xl text-center">
      <!-- Sad Cat Icon -->
      <div class="mb-8 flex animate-fade-in justify-center">
        <SadCat class="sad-cat" />
      </div>

      <!-- Animated 404 with gradient background -->
      <div class="relative mb-8">
        <!-- Background gradient orbs -->
        <div class="absolute inset-0 flex items-center justify-center opacity-20">
          <div
            class="h-64 w-64 animate-pulse rounded-full bg-gradient-to-br from-primary-400 to-primary-600 blur-3xl"
          >
          </div>
        </div>

        <!-- 404 text -->
        <h1
          class="relative animate-fade-in bg-gradient-to-br from-primary-400 to-primary-600 bg-clip-text text-9xl font-bold text-transparent"
        >
          404
        </h1>
      </div>

      <!-- Error message -->
      <div class="mb-12 animate-slide-up space-y-4" style="animation-delay: 0.2s;">
        <h2 class="text-3xl font-bold text-gray-900 dark:text-white">Oops! Page Not Found</h2>
        <p class="text-lg text-gray-600 dark:text-gray-400">
          Looks like this page wandered off. Let's get you back on track!
        </p>
      </div>

      <!-- Navigation buttons -->
      <div
        class="flex animate-slide-up flex-col items-center justify-center gap-4 sm:flex-row"
        style="animation-delay: 0.3s;"
      >
        <a
          href="/"
          class="group flex items-center gap-2 rounded-lg bg-gradient-to-r from-primary-500 to-primary-600 px-8 py-3 font-medium text-white transition-all duration-300 hover:scale-105 hover:from-primary-600 hover:to-primary-700 hover:shadow-xl hover:shadow-primary-500/25"
        >
          <i class="ph ph-house-line text-xl group-hover:animate-bounce"></i>
          <span>Go Home</span>
        </a>

        <a
          href="/#projects"
          class="group flex items-center gap-2 rounded-lg bg-gray-100 px-8 py-3 font-medium text-gray-900 transition-all duration-300 hover:scale-105 hover:bg-gray-200 dark:bg-dark-sidebar dark:text-white dark:hover:bg-dark-input"
        >
          <i class="ph ph-code text-xl group-hover:animate-bounce"></i>
          <span>View Projects</span>
        </a>
      </div>

      <!-- Quick links -->
      <div
        class="mt-16 animate-slide-up border-t border-gray-200 pt-8 dark:border-gray-800"
        style="animation-delay: 0.4s;"
      >
        <p class="mb-4 text-sm text-gray-500 dark:text-gray-500">Or explore:</p>
        <div class="flex flex-wrap justify-center gap-4">
          <a
            href="/#about"
            class="text-sm font-medium text-primary-600 hover:underline dark:text-primary-400"
          >
            About
          </a>
          <span class="text-gray-300 dark:text-gray-700">•</span>
          <a
            href="/#experience"
            class="text-sm font-medium text-primary-600 hover:underline dark:text-primary-400"
          >
            Experience
          </a>
          <span class="text-gray-300 dark:text-gray-700">•</span>
          <a
            href="/#skills"
            class="text-sm font-medium text-primary-600 hover:underline dark:text-primary-400"
          >
            Skills
          </a>
          <span class="text-gray-300 dark:text-gray-700">•</span>
          <a
            href="/#featured"
            class="text-sm font-medium text-primary-600 hover:underline dark:text-primary-400"
          >
            Featured Projects
          </a>
          <span class="text-gray-300 dark:text-gray-700">•</span>
          <a
            href="/#contact"
            class="text-sm font-medium text-primary-600 hover:underline dark:text-primary-400"
          >
            Contact
          </a>
        </div>
      </div>
    </div>
  </div>

  <style>
    .sad-cat path {
      fill: currentColor;
    }

    .sad-cat {
      color: #0088ff;
    }

    @media (prefers-color-scheme: dark) {
      .sad-cat {
        color: #33a0ff;
      }
    }

    :global(.dark) .sad-cat {
      color: #33a0ff;
    }

    @keyframes fade-in {
      from {
        opacity: 0;
        transform: scale(0.9);
      }
      to {
        opacity: 1;
        transform: scale(1);
      }
    }

    @keyframes slide-up {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .animate-fade-in {
      animation: fade-in 0.6s ease-out forwards;
    }

    .animate-slide-up {
      opacity: 0;
      animation: slide-up 0.6s ease-out forwards;
    }
  </style>
</Layout>
